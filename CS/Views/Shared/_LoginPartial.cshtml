@using Microsoft.AspNetCore.Identity
@using CS.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right csinavfontsize">
            <li>
                <a asp-area="" asp-controller="Profile" asp-action="Index" title="Manage"><i class="fa fa-user csiconcolor csinavfontsize"></i> @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link csinavfontsize">Log off <i class="fa fa-sign-out csiconcolor csinavfontsize"></i> </button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right csinavfontsize">
        <li><a asp-area="" asp-controller="Account" asp-action="Register"><i class="fa fa-address-card csiconcolor csinavfontsize"></i> Register</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login"><i class="fa fa-sign-in csiconcolor csinavfontsize"></i> Log in</a></li>
    </ul>
}
