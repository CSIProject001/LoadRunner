@model IEnumerable<CS.Models.ProductViewModels.Product>

@{
    ViewData["Title"] = "Products List";
    var itemCount = 1;
    var IsAdmin = Context.User.IsInRole("Admin");
    const int NumItemsPerRow = 3;
    }

@if (IsAdmin)
{
    <p>
        <a asp-action="Create" class="text-capitalize text-primary" style="font-size: large;font-weight: bold"><i class="fa fa-plus-square-o"></i>&nbsp;Add New </a>
    </p>
    <hr />
}

@{
    foreach (var product in Model)
    {
        if (itemCount == 1 || itemCount % NumItemsPerRow == 1)
        {
            @:<div class="row">
            }
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading panel-title">
                    <b>@product.Name</b>
                    <div style="float: right;">
                        <a asp-action="Details" asp-route-id="@product.ID" data-toggle="tooltip" title="Product Details" style="font-size: 25px;">
                            <i class="fa fa-info-circle"></i>
                        </a>
                        <a asp-action="Create" asp-controller="ShoppingCart" asp-route-id="@product.ID" data-toggle="tooltip" title="Add to Cart" style="font-size: 25px;">
                            <i class="fa fa-shopping-cart"></i>
                        </a>
                        @if (IsAdmin)
                        {
                            <a asp-action="Edit" asp-route-id="@product.ID" data-toggle="tooltip" title="Edit Product" style="font-size: 25px;">
                                <i class="fa fa-pencil-square-o" aria-hidden="true" style="padding-left: 5px;"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@product.ID" data-toggle="tooltip" title="Delete Product" style="font-size: 25px;">
                                <i class="fa fa-trash-o" style="padding-left: 5px;"></i>
                            </a>
                        }
                    </div>
                </div>  
                <div class="panel-body">
                    <img src="~/images/@product.ImageName" class="img-responsive" alt="Image" asp-append-version="true" />
                </div>
                <div class="panel-footer">&nbsp;
                      </div>
                <!--<div class="panel-body panel-primary">
                    <div>@product.QuantityPerUnit</div>
                    <div>@product.ReOrderLevel</div>
                    <div>@product.UnitPrice</div>
                    <div>@product.UnitsInOrder</div>
                </div>-->
                <!--<div class="panel-footer"></div>-->
            </div>
        </div>
        if (itemCount % NumItemsPerRow == 0)
        {
            @:</div>
        }
        if(itemCount != Model.Count())
        {
            itemCount++;
        }

    }
    var t = itemCount % NumItemsPerRow;
    if (t == 1)
    {
        @:<div class="col-md-8">&nbsp;</div>
        @:</div>

    }
    if (t == 2)
    {   
        @:<div class="col-md-4">&nbsp;</div>
        @:</div>
    }

}
<script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>
